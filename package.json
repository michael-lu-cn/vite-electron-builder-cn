{
  "name": "root",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "3.1.0",
  "private": true,
  "type": "module",
  "author": {
    "email": "kozackunisoft@gmail.com",
    "name": "Alex Kozack",
    "url": "https://kozack.me"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm -r --if-present run build",
    "compile": "pnpm run build && electron-builder build --config electron-builder.mjs --publish never",
    "test": "playwright test",
    "start": "node scripts/ensure-electron.cjs || exit 1; node packages/dev-mode.js",
    "typecheck": "pnpm -r --if-present run typecheck",
    "create-renderer": "cd packages && node ./integrate-renderer/create-renderer.js",
    "integrate-renderer": "pnpm start --filter @app/integrate-renderer",
    "init": "pnpm run create-renderer && pnpm run integrate-renderer && pnpm install",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check . && pnpm typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@npmcli/map-workspaces": "5.0.3",
    "@playwright/test": "1.58.0",
    "@radix-ui/react-primitive": "^2.1.4",
    "@swc/core": "^1.15.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "25.0.10",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "create-vite": "8.2.0",
    "electron": "40.0.0",
    "electron-builder": "26.0.12",
    "glob": "13.0.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "react-icons": "^5.5.0",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@app/main": "*",
    "@radix-ui/react-icons": "^1.3.2",
    "@shadcn/ui": "^0.0.4"
  }
}
