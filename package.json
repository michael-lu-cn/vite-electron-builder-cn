{
  "name": "root",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "3.1.0",
  "private": true,
  "type": "module",
  "author": {
    "email": "kozackunisoft@gmail.com",
    "name": "Alex Kozack",
    "url": "https://kozack.me"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm -r --if-present run build",
    "compile": "pnpm run build && electron-builder build --config electron-builder.mjs --publish never",
    "test": "playwright test",
    "start": "node packages/dev-mode.js",
    "typecheck": "pnpm -r --if-present run typecheck",
    "create-renderer": "cd packages && node ./integrate-renderer/create-renderer.js",
    "integrate-renderer": "pnpm start --filter @app/integrate-renderer",
    "init": "pnpm run create-renderer && pnpm run integrate-renderer && pnpm install",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check . && pnpm typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@npmcli/map-workspaces": "4.0.2",
    "@playwright/test": "1.55.0",
    "@swc/core": "^1.13.4",
    "@types/node": "24.3.0",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "create-vite": "7.1.1",
    "electron": "37.3.1",
    "electron-builder": "26.0.12",
    "glob": "11.0.3",
    "husky": "^9.1.7",
    "terser": "^5.43.1",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@app/main": "*"
  }
}
